rm *.class *.jar

# Compiling

export HADOOP_CLASSPATH=${JAVA_HOME}/lib/tools.jar
hadoop com.sun.tools.javac.Main WordCount.java
jar cf WordCount.jar WordCount*.class

# Run

hadoop fs -rm -r tq84/WordCount-1/output
hadoop jar WordCount.jar WordCount tq84/WordCount-1/input tq84/WordCount-1/output 

# Show results
hadoop fs -cat tq84/WordCount-1/output/part-*
